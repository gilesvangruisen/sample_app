<% provide(:title, @user.name) %>
<div class="row">
  <aside class="span4">
    <%= "that's you!" if current_user?(@user) %>
    	<%= gravatar_for @user %>
      <h1><%= @user.name %></h1>
      <h2><%= @user.email %></h2>
      <% if @user.microposts.any? %>
      <p class="count"><%= @user.microposts.count %></p>
    <ul id="posts">
    	<%= render @microposts %>
    </ul>
    <% end %>
  </aside>
</div>